@namespace FhirBlaze.AllergyIntoleranceModule.Components

<div class="container">
  <h3>Found: @(AllergyIntolerances.Count) allergyIntolerances!</h3>
  <div class="container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Summary</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var allergyIntolerance in this.AllergyIntolerances)
        {
          @if (@allergyIntolerance.Text != null && @allergyIntolerance.Text.Div != null)
          {
            <tr>
              <td>@(new MarkupString(allergyIntolerance.Text.Div))</td>
              <td>
                <button @onclick="(() => AllergyIntoleranceSelected(allergyIntolerance))" class="btn btn-primary">
                  Edit
                </button>
              </td>
            </tr>
          }
        }
      </tbody>
    </table>
  </div>
</div>
